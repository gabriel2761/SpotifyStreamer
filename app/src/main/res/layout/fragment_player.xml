<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielmojica.spotify3.PlayerFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ArtistName \nArtistAlbum"
        android:id="@+id/textView_artistAlbum_player"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView_albumImage_player"
        android:src="@android:drawable/progress_indeterminate_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_artistAlbum_player"
        />

    <TextView
        android:id="@+id/textView_trackName_player"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/imageView_albumImage_player"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

</RelativeLayout>
